@model WebApplication1.Models.Tbl_Users

@{
    ViewBag.Title = "ثبت نام";
}

<div class="signup-form ">
    @using (Html.BeginForm("Create", "Users", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        <table>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <tr>
                <td>@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @placeholder = "نام" } })</td>
                <td>@Html.EditorFor(model => model.Family, new { htmlAttributes = new { @placeholder = "نام خانوادگی" } })</td>
                <td>@Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @placeholder = "موبایل" } })</td>
            </tr>
            <tr>
                <td>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })</td>
                <td>@Html.ValidationMessageFor(model => model.Family, "", new { @class = "text-danger" })</td>
                <td>@Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })</td>
            </tr>
            <tr>
                <td>@Html.EditorFor(model => model.password, new { htmlAttributes = new { @placeholder = "رمز عبور" } })</td>
                <td>@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @placeholder = "ایمیل" } })</td>
                <td>
                    <select>
                        <option hidden id="gender" name="gender">جنسیت</option>
                        <option value="true">مرد</option>
                        <option value="false">زن</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>@Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })</td>
                <td>@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })</td>
                <td>@Html.ValidationMessageFor(model => model.gender, "", new { @class = "text-danger" })</td>
            </tr>
        </table>
        <br />
        <br />
        <div>
            <input type="submit" value="ثبت نام" class=" btn-gold text-center" />
        </div>

        <div>
            @Html.ActionLink("بازگشت به صفحه اصلی", "Index", "Home", null, new { })
        </div>
    }

</div>


<script src="~/Scripts/jquery-3.0.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


<div class="circles">
    <div class="circle-1"></div>
    <div class="circle-2"></div>
    <div class="circle-3"></div>
</div>


@section style{
    <style>
        h2 {
            text-align: center;
            color: white;
            font-size: large;
            margin-top: 5px;
        }

        body {
            background-image: url('../../images/bgimages/peakpx (14).jpg');
            background-size: cover;
            background-attachment: fixed;
        }

        footer {
            display: none;
        }
    </style>
}