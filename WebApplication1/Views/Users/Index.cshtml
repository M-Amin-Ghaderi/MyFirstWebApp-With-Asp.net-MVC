@model IEnumerable<WebApplication1.Models.Tbl_Users>

@{
    ViewBag.Title = "لیست کاربران";
}
<div>
    <table class="signup-form">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Family)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tbl_Roles.Role_Name)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Family)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tbl_Roles.Role_Title)
                </td>
                <td>
                    @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }, new { @class = "btn btn-warning text-white" }) |
                    @Html.ActionLink("جزئیات", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>
@section style {
    <style>
        footer {
            display:none;
        }
        .signup-form {
            margin-top: 13vh !important;
            width: 900px;
            margin-right: -450px;
        }
        body {
            background-image: url('../../images/bgimages/peakpx (15).jpg');
            background-size: cover;
            background-attachment: fixed;
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }

        h2 {
            color: white;
            text-align: center;
        }
    </style>

}