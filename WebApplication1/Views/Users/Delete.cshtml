@model WebApplication1.Models.Tbl_Users

@{
    ViewBag.Title = "Delete";
}
<div class="signup-form text-white mt-5">
    <h4 class="text-center mt-2">آیا از حذف مطمئن هستید؟</h4>
    <dl class="dl-horizontal">
        <dt class="form-label ml-3 mb-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd class="form-control col-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="form-label ml-3 mb-2">
            @Html.DisplayNameFor(model => model.Family)
        </dt>

        <dd class="form-control col-10">
            @Html.DisplayFor(model => model.Family)
        </dd>

        <dt class="form-label ml-3 mb-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>

        <dd class="form-control col-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt class="form-label ml-3 mb-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd class="form-control col-10">
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt class="form-label ml-3 mb-2">
            @Html.DisplayNameFor(model => model.Register_date)
        </dt>

        <dd class="form-control col-10">
            @Html.DisplayFor(model => model.Register_date)
        </dd>

        <dt class="form-label ml-3 mb-2">
            @Html.DisplayNameFor(model => model.gender)
        </dt>

        <dd class="form-control col-10">
            @if (Model.gender == true)
            {
                <span>مرد</span>
            }
            else if (Model.gender == false)
            {


                <span>زن</span>
            }
            else
            {
                <span>مشخص نشده</span>
            }

        </dd>

        <dt class="form-label ml-3 mb-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>

        <dd class="form-control col-10">
            @if (Model.IsActive)
            {
                <span style="color:green">فعال</span>
            }
            else
            {
                <span style="color:red">غیر فعال</span>
            }
        </dd>

        <dt class="form-label ml-3 mb-2">
            @Html.DisplayNameFor(model => model.Tbl_Roles.Role_Name)
        </dt>

        <dd class="form-control col-10">
            @Html.DisplayFor(model => model.Tbl_Roles.Role_Title)
        </dd>

    </dl>

    @using (Html.BeginForm("Delete", "Users", FormMethod.Post, new { @class = "float-left" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-row">
            @Html.ActionLink("بازگشت به لیست محصولات", "Index", null, new { @class = "mr-2" }) |
            <input type="submit" value="حذف" class="text-center btn btn-danger m-auto ml-2" />
        </div>
    }
</div>
@section style{

    <style>
        body {
            background-image: url('../../images/BgImages/peakpx (18).jpg');
            background-size: cover;
            background-attachment: fixed;
        }

        .btn-danger {
            background-color: #dc3545 !important;
        }

        footer {
            display: none;
        }
    </style>

}