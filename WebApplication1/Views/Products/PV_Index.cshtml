@model IEnumerable<WebApplication1.Models.Tbl_Products>
@{
    string defaultImage = "default_Product.jpg";
}

@foreach (var item in Model)
{
    <a href="#">
        <div class="product">
            <div class="product-image">
                @if (item.Product_Image != defaultImage)
                {
                    defaultImage = item.Product_Image;
                }
                <img src="/images/Product/@item.Product_Image" alt="Alternate Text" />
            </div>
            <div class="product-body">
                <div class="product-name">
                    @Html.DisplayFor(modelItem => item.Product_Name)
                </div>
                <div class="product-disc">
                    @Html.DisplayFor(modelItem => item.Product_Details)
                </div>
                <br />
                <div>
                    @Html.LabelFor(modelItem => item.Product_Price) :
                    @Html.DisplayFor(modelItem => item.Product_Price) تومان
                </div>
            </div>
            <div class="product-link">
                <a class="my-btn" href="#">
                    افزودن به سبد خرید <svg xmlns="http://www.w3.org/2000/svg" width="16" height="14" fill="currentColor" class="bi bi-cart-plus-fill" viewBox="0 0 16 16">
                        <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zM9 5.5V7h1.5a.5.5 0 0 1 0 1H9v1.5a.5.5 0 0 1-1 0V8H6.5a.5.5 0 0 1 0-1H8V5.5a.5.5 0 0 1 1 0z" />
                    </svg>
                </a>

            </div>
            <div>
                <br />

            </div>
        </div>
    </a>
}
